Op0<T>: Node = {
    <l:@L> <e1:Op0<T>> "or" <e2:Op1<T>> <r:@R> => Node::LogicalOr(Loc(l, r), Box::new(e1), Box::new(e2)),
    Op1<T>,
}

Op1<T>: Node = {
    <l:@L> <e1:Op1<T>> "and" <e2:Op2<T>> <r:@R> => Node::LogicalAnd(Loc(l, r), Box::new(e1), Box::new(e2)),
    Op2<T>,
}

Op2<T>: Node = {
    <l:@L> <e1:Op2<T>> "==" <e2:Op3<T>> <r:@R> => Node::Equality(Loc(l, r), Box::new(e1), Box::new(e2)),
    <l:@L> <e1:Op2<T>> "~=" <e2:Op3<T>> <r:@R> => Node::Inequality(Loc(l, r), Box::new(e1), Box::new(e2)),
    <l:@L> <e1:Op2<T>> "<"  <e2:Op3<T>> <r:@R> => Node::LessThan(Loc(l, r), Box::new(e1), Box::new(e2)),
    <l:@L> <e1:Op2<T>> ">"  <e2:Op3<T>> <r:@R> => Node::GreaterThan(Loc(l, r), Box::new(e1), Box::new(e2)),
    <l:@L> <e1:Op2<T>> "<=" <e2:Op3<T>> <r:@R> => Node::LessOrEqual(Loc(l, r), Box::new(e1), Box::new(e2)),
    <l:@L> <e1:Op2<T>> ">=" <e2:Op3<T>> <r:@R> => Node::GreaterOrEqual(Loc(l, r), Box::new(e1), Box::new(e2)),
    Op3<T>,
}

Op3<T>: Node = {
    <l:@L> <e1:Op3<T>> "|" <e2:Op4<T>> <r:@R> => Node::BitwiseOr(Loc(l, r), Box::new(e1), Box::new(e2)),
    Op4<T>,
}

Op4<T>: Node = {
    <l:@L> <e1:Op4<T>> "~" <e2:Op5<T>> <r:@R> => Node::BitwiseXor(Loc(l, r), Box::new(e1), Box::new(e2)),
    Op5<T>,
}

Op5<T>: Node = {
    <l:@L> <e1:Op5<T>> "&" <e2:Op6<T>> <r:@R> => Node::BitwiseAnd(Loc(l, r), Box::new(e1), Box::new(e2)),
    Op6<T>,
}

Op6<T>: Node = {
    <l:@L> <e1:Op6<T>> "<<" <e2:Op7<T>> <r:@R> => Node::LeftShift(Loc(l, r), Box::new(e1), Box::new(e2)),
    <l:@L> <e1:Op6<T>> ">>" <e2:Op7<T>> <r:@R> => Node::RightShift(Loc(l, r), Box::new(e1), Box::new(e2)),
    Op7<T>,
}

// right-associative
Op7<T>: Node = {
    <l:@L> <e1:Op8<T>> ".." <e2:Op7<T>> <r:@R> => Node::Concatenation(Loc(l, r), Box::new(e1), Box::new(e2)),
