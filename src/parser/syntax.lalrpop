    <l:@L> "return" <n:ExpList> <r:@R>             => Node::RetStat(Loc(l, r), Box::new(n)),
    <l:@L> "return" <empl:@L> <empr:@R> ";" <r:@R> => Node::RetStat(Loc(l, r), Box::new(Node::Empty(Loc(empl, empr)))),
    <l:@L> "return" <n:ExpList> ";" <r:@R>         => Node::RetStat(Loc(l, r), Box::new(n)),
